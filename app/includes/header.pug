//- - var list = [{'titre':'jewelery', 'url':'#'},{'titre':'books', 'url':'#'},{'titre':'grocery', 'url':'#'},{'titre':'movies', 'url':'#'}]
- var json = data
header
  .block 
      .hero.is-primary
          .hero-body
              .block
                  .navbar
                      .navbar-start
                          a.nav-item: img(src="./images/logo.png", title="image" )
                      .navbar-end
                          ul
                              each item in json.hero.links   
                                  li 
                                    a(href=item.url) #{item.title}              
              #block
                  .container
                      .columns
                          .column
                          .column.is-two-fifths
                              .title.is-1.has-text-centered #{json.hero.title}
                              .content.has-text-centered  #{json.hero.text}
                          .column
